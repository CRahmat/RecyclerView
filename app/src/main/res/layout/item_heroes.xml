<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:backgroundTint="#b3d9ff"
        android:background="@drawable/custom_bttn"

        >
        <ImageView
            android:id="@+id/heroesImage"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ahmad_dahlan"

            >
        </ImageView>

        <TextView
            android:id="@+id/heroesName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/heroesImage"
            android:text="Heroes Name"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            >

        </TextView>

        <ScrollView
            android:id="@+id/detailsScroll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/heroesImage"
            android:layout_below="@+id/heroesName"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/heroesDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heroes Details"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
                >

            </TextView>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/heroesImage"
            android:layout_below="@+id/detailsScroll"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            >
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btn_see"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Lihat"
                android:background="@drawable/custom_bttn"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#e60000"
                android:textColor="#FFFFFF"

                >
            </Button>
            <Button
                android:id="@+id/btn_share"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_bttn"
                android:text="Share"
                android:layout_toRightOf="@+id/btn_see"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#009933"
                android:textColor="#FFFFFF"

                >
            </Button>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>